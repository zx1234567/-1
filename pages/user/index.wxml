<view class="container">  
  <view class="login-icon">  
    <image class="login-img" src="../images/top.png"></image>  
  </view>  
  <view class="login-from">  
  
    <!--账号-->  
    <view class="inputView">  
       
      <label class="loginLab">{{images1.msg}}</label>  
      <input class="inputText" placeholder="仅限中国大陆手机号" bindinput="phoneInput" />  
    </view>  
    <view class="line"></view>  
  
    <!--密码-->  
    <view class="inputView">  
      
      <label class="loginLab">验证码</label>  
      <input class="inputText" password="true" placeholder="请输入验证码" bindinput="passwordInput"/>  
    </view>  
  
    <!--按钮-->  
    <view class="loginBtnView">  
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>  
    </view>  
  </view>  
</view>  